.container{style: "padding: 15px 15px 0px;"}
  .row
    .page-header
      %h1
        Varnish Restart
        %small
          let's restart varnish!
  .row
    .col-md-8.col-md-offset-2
      .well
        %form{id:"form", method: "POST", class: "form-inline"}
          .text-center
            %input{class: "btn btn-danger btn-lg", type: "submit", value: 'DO IT',id:"submit"}
      .alert.alert-success.text-center{style:"display: none;"} Success!! Varnish Restarted
      .alert.alert-danger.alert-dismissible{style:"display: none;"}
        %button.btn.btn-info.close{type: "button"} &times;
        .span.text-center#error
      .alert.alert-info.text-center{style: "display: none;"}
        .span{style: 'padding-bottom: 10px;'} Working...
        %img{src: "/images/ajax-loader.gif", class: "img-responsive", style: "margin: 0 auto;"}
%script{src: "/js/jquery.js"}
%script{src: "/js/bootstrap.min.js"}
%script{src: "/js/application/page.js"}
